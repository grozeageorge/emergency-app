<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Your main app theme -->
    <style name="Theme.Emergencyapp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your colors here -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>
    <style name="MedicalCardStyle">
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">#1E1E1E</item>
        <item name="strokeWidth">0dp</item>

        <item name="cardElevation">16dp</item>
    </style>

    <style name="SectionHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
</resources>
