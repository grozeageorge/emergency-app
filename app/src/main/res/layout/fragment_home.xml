<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. THE OPEN STREET MAP VIEW -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. LOG OUT BUTTON (Top Right) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_out"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#D32F2F"
        app:cornerRadius="20dp"
        app:strokeColor="#D32F2F"
        app:strokeWidth="1dp"
        android:backgroundTint="#E0E0E0"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 3. SOS BUTTON (Bottom Right) -->
    <ImageButton
        android:id="@+id/btnSOS"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_sos_button"
        android:background="@null"
        android:scaleType="fitCenter"
        android:elevation="10dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/sos_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 4. COUNTDOWN OVERLAY (Hidden by default) -->
    <FrameLayout
        android:id="@+id/layoutCountdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#D32F2F"
                android:textSize="120sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sending SOS..."
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnCancelSOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:backgroundTint="#555555"
                android:layout_marginTop="32dp"/>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>